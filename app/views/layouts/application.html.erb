<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header>
    <div class="navbar navbar-inverse">
      <div class=container>
      <div style="color: white">
         <h2>Bookers</h2>
      </div>

      <body>
    <div id="container">
  <div id="theTarget">
    <div class="image1"></div>
    <div class="image2"></div>
    <div class="image3"></div>
    <div class="image4"></div>
    <div class="image5"></div>
  </div>
</div>

    <% if user_signed_in? %>
      <%= form_tag(search_path, :method => 'get') do %>
      <%= select_tag(:option, options_for_select([["user", "1"],["book","2"]]))%>
      <%= select_tag(:choice, options_for_select([["部分一致検索", "1" ],["後方一致検索", "2" ],["前方一致検索", "3" ],["完全一致検索", "4" ]])) %>

      <%= text_field_tag :search %>
      <%= submit_tag 'Search' %>
      <% end %>
    <% end %>

      <div id="slidemenu" style="background-color: black">
         <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
           <% if user_signed_in? %>
            <li>
             <!-- <a class="glyphicon glyphicon-home home"href="/users/id">Home</a> -->
              <%= link_to user_path(current_user) do %>
               <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
              <% end %>
            </li>
            <li>
             <!-- <a class="glyphicon glyphicon-user users"href="/users">users</a> -->
             <%= link_to users_path do %>
               <span class="glyphicon glyphicon-user" aria-hidden="true">Users</span>
             <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true">Books</span>
              <% end %>
            </li>
            <li>
               <%= link_to destroy_user_session_path, method: :delete do %>
                 <span class="glyphicon glyphicon-log-out" aria-hidden="true">logout</span>
               <% end %>
            </li>
          <% else %>
          <li>
            <%= link_to root_path do %>
               <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to home_about_path do %>
               <span class="glyphicon glyphicon-link" aria-hidden="true">About</span>
            <% end %>
          </li>
          <li>
              <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true">Sign up</span>
              <% end %>
          </li>
          <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true">login</span>
              <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  </header>
  <%= yield %>
  <footer>
  </footer>
</body>
</html>
