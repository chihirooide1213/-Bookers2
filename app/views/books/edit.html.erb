<h2>Editing Book</h2>

<% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
         </div>
<% end %>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
         <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
