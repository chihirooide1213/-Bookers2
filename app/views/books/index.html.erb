<h3>Bookers</h3>
<table>
		<thead>
	  		<tr>
        		 <th>Title</th>
        		 <th>Opinion</th>
        		 <th colspan="3"></th>
	  		</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
        		<tr>
        			<td><%= book.title %></td>
        			<td><%= book.body %></td>
        		</tr>
       		<% end %>
       </tbody>
   </table>
<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
    			<h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
    			<ul>
      				<% @book.errors.full_messages.each do |message| %>
        				<li><%= message %></li>
     			 	<% end %>
    			</ul>
			<% end %>
			<h4>Title</h4>
  				<%= f.text_field :title %>
			<h4>Opinion</h4>
  				<%= f.text_area :body %><br>
				<%= f.submit 'Create Book' %>
		<% end %>
